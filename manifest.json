{
    "manifest_version": 3,
    "name": "popG Mail Notification Extension",
    "version": "1.0",
    "description": "Get a heads-up notification when a new mail arrives in your inbox.",
    "permissions": ["notifications", "storage", "identity"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "icons": {
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "oauth2": {
      "client_id": "YOUR_CLIENT_ID.apps.googleusercontent.com",
      "scopes": [
        "https://mail.google.com/",
        "https://www.googleapis.com/auth/gmail.readonly"
      ]
    },
    "host_permissions": [
      "https://mail.google.com/",
      "https://www.googleapis.com/"
    ]
  }
  